            <Color x:Key="TextSub">#989DA8</Color>
            <Color x:Key="ActiveColor">#FCB53B</Color>
            <Color x:Key="ActiveColorLight">#fde5b8</Color>
            <Color x:Key="BackgroundViewWithAlfa">#29000000</Color>
            
